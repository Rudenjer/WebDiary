@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
    </ul>
    }

    using (Html.BeginForm("SearchFriend", "Friend", FormMethod.Post, new { id = "logoutForm", @class = "navbar-form navbar-right" }))
    {
        
        @Html.TextBox("searchQuery", "Search", new { @class = "form-control", placeholder = "Search" })
        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
    }
}
else
{
        <ul class="nav navbar-nav navbar-right">
            <li><a href="@Url.Action("Register", "Account", new {id = "registerLink"})"><span class="glyphicon glyphicon-user"></span> Register</a></li>
            <li><a href="@Url.Action("Login", "Account", new {id = "loginLink"})"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        </ul>
}
