@model IEnumerable<WebDiary.DAL.Entities.Note>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
@using (Html.BeginForm("Index", "Note", FormMethod.Get, new { @class = "form-horizontal", role = "form", @id = "filterForm", @name = "filterForm" }))
{
    <p>Total items</p>
    <div class="form-group">
        @Html.LabelFor(u => u.First().User.PageInfo.PageSize, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(u => u.First().User.PageInfo.PageSize, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(u => u.First().User.PageInfo.PageNumber@*, new { @class = "pageNumber" }*@)
    @Html.Hidden("pageNumber", Model.First().User.PageInfo.PageNumber, new { @class = "pageNumber" })
    @Html.HiddenFor(u => u.First().User.PageInfo.PageSize)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" id="filter" value="Filter" />
        </div>
    </div>
}

<div>
    <br>

    @foreach (var item in Model)
    {
        <div>
            <a href=""><h4 class="media-heading">@item.Name</h4></a>
            @item.Message
            <a href="">Полностью</a>
        </div>
        <div>
            <div class="col-md-2">
                @item.Date
            </div>
            <div class="col-md-2 .col-md-offset-4">
                @item.Privacy
            </div>
        </div>
        <div>
            @foreach (var tag in item.Tags)
            {
                <span class="label label-primary">@tag.Name</span>
            }
        </div>
        @Html.ActionLink("Delete", "DeleteNote", "Note", new {id = item.Id}, null)
        <hr>
    }

</div>

<div class="btn-group">
    @for (var i = 1; i <= Model.First().User.PageInfo.TotalPages; i++)
    {
        if (Model.First().User.PageInfo.PageNumber == i)
        {
            <span class="selected btn-primary btn btn-default">@i</span>
        }
        else
        {
            <button class="btn btn-default paginationButton" type="submit" form="filterForm"> @i </button>
        }
    }
</div>
</body>
</html>

<script src="@Url.Content("~/Content/Scripts/paginationScript.js")" type="text/javascript"></script>
